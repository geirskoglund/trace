<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TaskDetailActivity" >
	

	<!-- TASK NAME -->
            <TextView 
                android:id="@+id/task_detail_name"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="5dip"
	    		android:textSize="20sp"
	    		android:textStyle="bold"
	        	android:text="@string/DUMMY_TEXT"
	        />
      
 	<!-- PLAN NAME -->
    		<TextView
    		    android:id="@+id/task_detail_plan_name"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:paddingLeft="10dip"
	        	android:textSize="14sp"
	        	android:layout_below="@+id/task_detail_name"
	        	android:text="@string/DUMMY_TEXT"
	        />
   
	<!-- TASK DESCRIPTION             -->
            <TextView 
                android:id="@+id/task_detail_description"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:padding="5dip"
	        	android:layout_below="@+id/task_detail_plan_name"
	        	android:text="@string/DUMMY_TEXT"
	        />

	<!-- TASK STATUS -->
            <TextView
                android:id="@+id/task_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_detail_description"
                android:padding="5dip"
                android:text="@string/DUMMY_TEXT" />

	<!-- ACCUMULATED TIME -->
			<TextView
                android:id="@+id/task_detail_accumulated_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_detail_status"
                android:padding="5dip"
                android:text="Accumulated time:" />
			
<!-- 	IS SET TO DEFAULT TASK -->
			<CheckBox
		        android:id="@+id/task_detail_default"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:textSize="14sp"
		        android:layout_below="@+id/task_detail_accumulated_time"
		        android:text="@string/label_default_task" />

    
    <TextView
		        android:id="@+id/time_slot_header"
				android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="5dip"
			    android:layout_below="@+id/task_detail_default"
			    android:textSize="18sp"
			    android:textStyle="bold"
			    android:text="@string/label_time_slots" />
    
    		<View
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:layout_below="@+id/time_slot_header"
			    android:background="@android:color/darker_gray"/>


<!--     ListView ></ListView -->

</RelativeLayout>
