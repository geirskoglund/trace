<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlanDetailActivity" >

    <TextView
        android:id="@+id/plan_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:text="@string/DUMMY_TEXT"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/plan_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plan_detail_name"
        android:padding="5dip"
        android:text="@string/DUMMY_TEXT" />

    <TextView
        android:id="@+id/auto_register_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plan_detail_description"
        android:paddingBottom="0dp"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:text="@string/auto_select_label" />

    <TextView
        android:id="@+id/location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto_register_label"
        android:padding="5dip"
        android:text="@string/label_location" />

    <TextView
        android:id="@+id/plan_detail_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/location_label"
        android:layout_toRightOf="@+id/location_label"
        android:padding="5dip"
        android:text="@string/DUMMY_TEXT" />

    <TextView
        android:id="@+id/plan_detail_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plan_detail_lat"
        android:layout_toRightOf="@+id/plan_detail_lat"
        android:padding="5dip"
        android:text="@string/DUMMY_TEXT" />

    <TextView
        android:id="@+id/ssid_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto_register_label"
        android:padding="5dip"
        android:text="@string/label_ssid" />

    <TextView
        android:id="@+id/plan_detail_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ssid_label"
        android:layout_toRightOf="@+id/ssid_label"
        android:padding="5dip"
        android:text="@string/DUMMY_TEXT" />

    <TextView
        android:id="@+id/nfc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto_register_label"
        android:padding="5dip"
        android:text="@string/label_nfc" />

    <TextView
        android:id="@+id/plan_detail_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nfc_label"
        android:layout_toRightOf="@+id/nfc_label"
        android:padding="5dip"
        android:text="@string/DUMMY_TEXT" />

<!--     <TextView -->
