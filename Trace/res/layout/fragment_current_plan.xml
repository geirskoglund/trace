<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" 
    android:id="@+id/fragment_current">

    <TableLayout
        android:id="@+id/fragmentTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <!-- First row. Contains plan name label -->
        <TableRow 
            android:id="@+id/firstRow"
            android:layout_width="match_parent">
            
            <TextView
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="5dip" 
	        	android:text="@string/label_name"
        	/>
    		
    		<TextView
    		    android:id="@+id/current_plan_name"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="5dip"
	        	android:text="@string/DUMMY_TEXT"
	        />
            
        </TableRow>
        
        <!-- Second row. Contains plan description -->
        <TableRow 
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="0dip">
            
            <TextView 
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="5dip"
	        	android:text="@string/label_description"
        	/>
            
            <TextView 
                android:id="@+id/current_plan_description"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="5dip"
	        	android:text="@string/DUMMY_TEXT"
	        />
            
        </TableRow>
    </TableLayout>
    
    
    
    <!-- DUMMY BUTTON FOR NAV TESTING. LISTVIEW WILL BE POSITIONED HERE INSTEAD -->
    <Button 
        android:id="@+id/toTaskButton"
        android:layout_height="300dip"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:text="@string/DUMMY_TASK_BUTTON"
        android:onClick="viewTaskDetails"/>
    
    <TextView 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dip"
	    android:layout_above="@id/toTaskButton"
	    android:text="@string/label_tasks"/>
    <!-- ListView ></ListView-->
            
        

</RelativeLayout>